<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D3A87">

    <!-- Header section with Back, Bosch logo, and Settings -->

    <!-- Place model in your environment button -->

    <!-- See model use cases button -->

    <ImageButton
        android:id="@+id/use_cases"
        android:layout_width="243dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="110dp"
        android:src="@drawable/group_10"
        android:background="@drawable/group_10"
         />

    <ImageButton
        android:id="@+id/features"
        android:layout_width="243dp"
        android:layout_height="75dp"
        android:layout_below="@id/use_cases"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/group_9"
        android:background="@drawable/group_9"
        />

    <ImageButton
        android:id="@+id/model_button2"
        android:layout_width="247dp"
        android:layout_height="70dp"
        android:layout_below="@id/use_cases"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="-231dp"
        android:layout_marginEnd="99dp"
        android:src="@drawable/group_8"
        android:background="@drawable/group_8"
         />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/backbutton" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:srcCompat="@drawable/bo" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="70dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Button"
        android:alpha="0" />
    <Button
            android:id="@+id/settings_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0"
    />

</RelativeLayout>