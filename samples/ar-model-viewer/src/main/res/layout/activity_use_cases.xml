<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1D3A87">
    
    <!-- Back Button (ImageView) -->
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/backbutton" />
    
    <!-- Secondary ImageView (Logo or Image) -->
    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:srcCompat="@drawable/bo" />
    
    <!-- LinearLayout to contain buttons dynamically -->
    <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView6"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp">
        
        <!-- Use Case Buttons (Add dynamically) -->
        <Button
                android:id="@+id/use_case_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excavation" />
        
        <Button
                android:id="@+id/use_case_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concrete forms" />
        
        <!-- Add more buttons here if needed -->
    </LinearLayout>
</RelativeLayout>
